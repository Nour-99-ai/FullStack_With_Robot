    <script>
        $(document).ready(function () {
            $.ajax({
                url: '@Url.Action("GetCartDetails", "Cart")', 
                method: 'GET',
                success: function (response) {
                    if (response.success) {
                        $('.sub-total .amount').text(response.total.toFixed(2));

                        $('.cart-count').text(response.totalItems);

                        const cartHtml = response.cartHtml || '<li class="empty-cart">Your cart is empty.</li>';
                        $('.minicart-product-list').html(cartHtml);
                    } else {
                        console.error('Failed to load cart details.');
                    }
                },
                error: function () {
                    console.error('Error loading cart details.');
                }
            });
        });

        function addToCart(productId, sellerId) {
            $.ajax({
                url: '@Url.Action("AddToCart", "Cart")',
                type: 'POST',
                data: { productId: productId, sellerId: sellerId }, 
                success: function (response) {
                    if (response.success) {
                        $('.header-cart .cart-count').text(response.totalItems);  

                        let minicartList = $('.minicart-product-list');
                        minicartList.empty(); 

                        response.cartHtml ? minicartList.html(response.cartHtml) : minicartList.html('<li class="empty-cart">Your cart is empty.</li>');

                        $('.offcanvas-cart .sub-total .amount').text(response.total.toFixed(2));
                    } else {
                        alert('Failed to add the product to the cart.');
                    }
                },
                error: function (error) {
                    console.error("Error adding to cart:", error);
                    alert("Failed to add the product to the cart.");
                }
            });
        }

        function removeFromCart(productId, sellerId) {
            $.ajax({
                url: '@Url.Action("RemoveFromCart", "Cart")',
                type: 'POST',
                data: { productId: productId, sellerId: sellerId }, 
                success: function (response) {
                    if (response.success) {
                        $('.cart-count').text(response.totalItems);  

                        let minicartList = $('.minicart-product-list');
                        minicartList.empty(); 

                        if (response.totalItems === 0) {
                            minicartList.html('<li class="empty-cart">Your cart is empty.</li>');
                        } else {
                            response.cartHtml ? minicartList.html(response.cartHtml) : minicartList.html('<li class="empty-cart">Your cart is empty.</li>');
                        }

                        $('.offcanvas-cart .sub-total .amount').text(response.total.toFixed(2));
                    } else {
                        alert('Failed to remove product from cart.');
                    }
                },
                error: function (error) {
                    console.error("Error removing from cart:", error);
                    alert("Failed to remove product from cart.");
                }
            });
        }
    </script>

